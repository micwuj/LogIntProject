<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="DriverID"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editTextPackage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="PackageID"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/editTextDriver"
        app:layout_constraintTop_toBottomOf="@+id/editTextDriver" />

    <EditText
        android:id="@+id/editTextAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Action"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/editTextPackage"
        app:layout_constraintTop_toBottomOf="@+id/editTextPackage" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="@+id/editTextDateTime"
        app:layout_constraintStart_toStartOf="@+id/editTextDateTime"
        app:layout_constraintTop_toBottomOf="@+id/editTextDateTime" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="77dp"
        android:text="LogIntTester"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/editTextDriver"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Date:Time"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/editTextAction"
        app:layout_constraintTop_toBottomOf="@+id/editTextAction" />

</androidx.constraintlayout.widget.ConstraintLayout>